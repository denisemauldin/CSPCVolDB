<h1>Listing schedules</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Event</th>
      <th>Staff</th>
      <th>User</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @schedules.each do |schedule| %>
      <tr>
        <td><%= schedule.date.to_date %></td>
        <td><%= schedule.staff.event.name %></td>
        <td><%= schedule.staff.position.name %></td>
        <td><%= if schedule.accepted_offer then schedule.accepted_offer.user.username end %></td>
        <td><%= schedule.location.name %></td>
        <td><%= link_to 'Show', schedule %></td>
        <td><%= link_to 'Edit', edit_schedule_path(schedule) %></td>
        <td><%= link_to 'Destroy', schedule, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

