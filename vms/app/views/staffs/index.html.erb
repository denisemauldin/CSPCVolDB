<h1>Listing staffs</h1>

<table>
  <thead>
    <tr>
      <th>Event</th>
      <th>Role</th>
      <th>Shift</th>
      <th>Permanent user</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <td><%= staff.event.name %></td>
        <td><%= staff.position.name %></td>
        <td><%= staff.shift.start %></td>
        <td><%= staff.permanent_user %></td>
        <td><%= link_to 'Show', staff %></td>
        <td><%= link_to 'Edit', edit_staff_path(staff) %></td>
        <td><%= link_to 'Destroy', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

